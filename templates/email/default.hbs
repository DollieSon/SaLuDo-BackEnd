<div style="background-color: {{categoryColor notification.category}}; padding: 20px; border-radius: 8px; margin-bottom: 25px;">
  <h2 style="margin: 0; color: #ffffff; font-size: 24px;">{{notification.title}}</h2>
  {{#if notification.priority}}
  <span style="display: inline-block; margin-top: 10px; padding: 4px 12px; background-color: rgba(255,255,255,0.2); color: #ffffff; border-radius: 12px; font-size: 12px; font-weight: 600;">
    {{priorityBadge notification.priority}}
  </span>
  {{/if}}
</div>

<div style="background-color: #f9fafb; padding: 25px; border-radius: 8px; margin-bottom: 25px;">
  <p style="font-size: 16px; line-height: 1.7; color: #374151; margin: 0;">
    {{#if recipientName}}
    Hello {{recipientName}},<br><br>
    {{/if}}
    {{notification.message}}
  </p>
  
  {{#if notification.data}}
  <div style="margin-top: 20px; padding: 15px; background-color: #ffffff; border-left: 4px solid {{categoryColor notification.category}}; border-radius: 4px;">
    {{#each notification.data}}
    <p style="margin: 5px 0; font-size: 14px; color: #6b7280;">
      <strong>{{@key}}:</strong> {{this}}
    </p>
    {{/each}}
  </div>
  {{/if}}
  
  {{#if actionUrl}}
  <div style="text-align: center; margin-top: 30px;">
    <a href="{{actionUrl}}" class="btn" style="display: inline-block; padding: 12px 28px; background-color: {{categoryColor notification.category}}; color: #ffffff; text-decoration: none; border-radius: 6px; font-weight: 500;">
      {{#if notification.action.label}}{{notification.action.label}}{{else}}View Details{{/if}}
    </a>
  </div>
  {{/if}}
</div>

<div style="padding: 20px; background-color: #ffffff; border: 1px solid #e5e7eb; border-radius: 8px;">
  <p style="font-size: 13px; color: #6b7280; margin: 5px 0;">
    <strong>Category:</strong> {{capitalize notification.category}}
  </p>
  <p style="font-size: 13px; color: #6b7280; margin: 5px 0;">
    <strong>Sent:</strong> {{formatDate notification.createdAt}}
  </p>
  {{#if notification.expiresAt}}
  <p style="font-size: 13px; color: #6b7280; margin: 5px 0;">
    <strong>Expires:</strong> {{formatDate notification.expiresAt}}
  </p>
  {{/if}}
</div>
